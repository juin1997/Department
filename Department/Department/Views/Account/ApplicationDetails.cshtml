@model ApplicationDetailsViewModel
@{
    ViewData["Title"] = "ApplicationDetails";
}

<div class="bg">
        <br />
        <h1 style="text-align:center;margin-bottom:5%">查看申请</h1>
        <div class="row">
            <div style="padding-left:30%" class="col-md-6">
                <text style="margin-bottom:3%;width:80%" class="form-control">姓名：@Model.Stu.Name</text>
                <text style="margin-bottom:3%;width:80%" class="form-control">性别：@Model.Stu.Gender</text>
                <text style="margin-bottom:3%;width:80%" class="form-control">年级：@Model.Stu.Grade</text>
                <text style="margin-bottom:3%;width:80%" class="form-control">学院：@Model.Stu.Institute</text>
            </div>
            <div style="padding-left:5%" class="col-md-6">
                <img style="margin-bottom:3%;margin-left:5%" src="~/images/picture.png" class="img-rounded">
            </div>
        </div>
        <textarea style="margin-left:29.5%;margin-bottom:5%" class="form-control" rows="10">简介：@Model.Stu.Introduction</textarea>
        <div style="margin-left:46%;margin-bottom:8%" class="btn-group">
            <a asp-action="Agree" asp-route-sid="@Model.Sid" asp-route-did="@Model.Did"   class="btn btn-primary">同意</a>
            <a asp-action="Reject" asp-route-sid="@Model.Sid" asp-route-did="@Model.Did"   class="btn btn-primary">拒绝</a>
        </div>
    </div>