
@{
    ViewData["Title"] = "Applications";
}

<div class="bg">
    <br />
    <h1 style="text-align:center;margin-bottom:5%">查看申请</h1>
    <div class="row">
        <div style="padding-left:30%" class="col-md-6">
            <text style="margin-bottom:3%;width:80%" class="form-control">姓名：</text>
            <text style="margin-bottom:3%;width:80%" class="form-control">性别：</text>
            <text style="margin-bottom:3%;width:80%" class="form-control">年级：</text>
            <text style="margin-bottom:3%;width:80%" class="form-control">学院：</text>
        </div>
        <div style="padding-left:5%" class="col-md-6">
            <img style="margin-bottom:3%;margin-left:5%" src="~/images/picture.png" class="img-rounded">
        </div>
    </div>
    <textarea style="margin-left:29.5%;margin-bottom:5%" class="form-control" rows="10">简介：</textarea>
    <div style="margin-left:46%;margin-bottom:8%" class="btn-group">
        <button type="button" class="btn btn-primary">同意</button>
        <button type="button" class="btn btn-primary">拒绝</button>
    </div>
</div>
