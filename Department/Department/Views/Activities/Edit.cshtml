@model Department.Models.Activity

@{
    ViewBag.Title = "编辑活动";
    Layout = "_LayoutD";
}



    <br />
    <h1 style="text-align:center;margin-bottom:5%">编辑活动</h1>
    <div style="margin-left:43%">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="DepartID" />
            <p>
                <label>活动名称：</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </p>
            <p>
                <label>活动地点：</label>
                <input asp-for="Actaddress" />
                <span asp-validation-for="Actaddress" class="text-danger"></span>
            </p>
            <p>
                <label>活动时间：</label>
                <input asp-for="Acttime" />
                <span asp-validation-for="Acttime" class="text-danger"></span>
            </p>
            <p>
                <label>具体情况：</label>
                <textarea rows="8" asp-for="Actintroduction"></textarea>
                <span asp-validation-for="Actintroduction" class="text-danger"></span>
            </p>
            <p>
                <div style="margin-left:10%;margin-bottom:5%;margin-top:5%" class="checkbox">
                    <label>
                        <input asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                    </label>
                </div>
            </p>
            <p>
                <input style="margin-left:10%" type="submit" value="确定编辑" class="btn btn-default" />|
                <a asp-action="Index" asp-route-id="@Model.DepartID">返回</a>
            </p>
        </form>
    </div>



