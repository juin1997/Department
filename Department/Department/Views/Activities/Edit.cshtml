@model Department.Models.Activity

@{
    ViewData["Title"] = "编辑活动";
}


<div class="bg">
    <br />
    <h1 style="text-align:center;margin-bottom:5%">编辑活动</h1>
    <form style="padding-bottom:5%" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Actaddress" class="control-label"></label>
            <input asp-for="Actaddress" class="form-control" />
            <span asp-validation-for="Actaddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Acttime" class="control-label"></label>
            <input asp-for="Acttime" class="form-control" />
            <span asp-validation-for="Acttime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Actintroduction" class="control-label"></label>
            <textarea rows="5" asp-for="Actintroduction" class="form-control"></textarea>
            <span asp-validation-for="Actintroduction" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div style="margin-left:10%" class="checkbox">
                <label>
                    <input asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                </label>
            </div>
        </div>
        <div class="form-group">
            <input style="margin-left:10%" type="submit" value="确定编辑" class="btn btn-default" /><p />
            <a style="margin-left:13%" asp-action="Index" asp-route-id="@Model.DepartID">返回</a>
        </div>
    </form>
</div>



